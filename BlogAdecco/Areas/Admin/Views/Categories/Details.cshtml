@model BlogAdecco.Models.Category

@{
    ViewData["Title"] = @R["Details"];
}

<div class="heading my-4">
    <div class="d-flex flex-column flex-lg-row justify-content-lg-between align-items-lg-end mb-6 gap-3">
        <div class="w-100 w-lg-auto">
            <h1 class="anton mb-2">@R["Details"] - @R["Category"]</h1>
            <p class="text-muted mb-0">@R["View category details"]</p>
        </div>
        <div class="d-flex gap-2 w-100 w-lg-auto justify-content-lg-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg d-flex align-items-center justify-content-center gap-2 flex-fill flex-lg-grow-0">
                <i class="bi bi-pencil-square"></i>
                <span>@R["Edit"]</span>
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg d-flex align-items-center justify-content-center gap-2 flex-fill flex-lg-grow-0">
                <i class="bi bi-arrow-left"></i>
                <span>@R["Back to List"]</span>
            </a>
        </div>
    </div>
</div>

<!-- Basic Information Card -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-custom-header text-dark py-3">
        <h5 class="mb-0">
            <i class="bi bi-tag me-2"></i>
            @R["Basic Information"]
        </h5>
    </div>
    <div class="card-body custom-card-body p-4">
        <div class="row">
            <div class="col-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" disabled />
            </div>
            <div class="col-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Slug"></label>
                <input class="form-control" asp-for="Slug" disabled />
            </div>
            <div class="col-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Posts"></label>
                <input class="form-control" asp-for="Posts.Count" type="text" disabled />
            </div>
            <div class="col-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Parent"></label>
                <input class="form-control" asp-for="Parent.Name" type="text" disabled />
            </div>
            <div class="col-12 mb-3">
                <label class="form-label fw-semibold" asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" rows="5" disabled></textarea>
            </div>
        </div>
    </div>
</div>
