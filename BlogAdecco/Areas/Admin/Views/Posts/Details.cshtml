@model BlogAdecco.Models.Post
@inject IBlogAdeccoUtils BlogAdeccoUtils

@{
    ViewData["Title"] = @R["Details"];
}

<div class="heading my-4">
    <div class="d-flex flex-column flex-lg-row justify-content-lg-between align-items-lg-end mb-6 gap-3">
        <div class="w-100 w-lg-auto">
            <h1 class="anton mb-2">@R["Details"] - @R["Post"]</h1>
            <p class="text-muted mb-0">@R["View post details"]</p>
        </div>
        <div class="d-flex gap-2 w-100 w-lg-auto justify-content-lg-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg d-flex align-items-center justify-content-center gap-2 flex-fill flex-lg-grow-0">
                <i class="bi bi-pencil-square"></i>
                <span>@R["Edit"]</span>
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg d-flex align-items-center justify-content-center gap-2 flex-fill flex-lg-grow-0">
                <i class="bi bi-arrow-left"></i>
                <span>@R["Back to List"]</span>
            </a>
        </div>
    </div>
</div>

<!-- Basic Information Card -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-custom-header text-dark py-3">
        <h5 class="mb-0">
            <i class="bi bi-newspaper me-2"></i>
            @R["Basic Information"]
        </h5>
    </div>
    <div class="card-body custom-card-body p-4">
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Title"></label>
                <input class="form-control" asp-for="Title" disabled />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Status"></label>
                <input class="form-control" asp-for="Status" disabled />
            </div>
            <div class="col-12 mb-3">
                <label class="form-label fw-semibold" asp-for="Summary"></label>
                <textarea class="form-control" asp-for="Summary" rows="5" disabled></textarea>
            </div>
            <div class="col-12 mb-3">
                <label class="form-label fw-semibold" asp-for="Content"></label>
                <textarea class="form-control" asp-for="Content" rows="5" disabled></textarea>
            </div>
            <div class="col-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Slug"></label>
                <input class="form-control" asp-for="Slug" disabled />
            </div>
            <div class="col-6 mb-3">
                <label class="form-label">&nbsp;</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Fixed" disabled />
                    <label class="form-label form-check-label" asp-for="Fixed"></label>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Categorization Card -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-custom-header text-dark py-3">
        <h5 class="mb-0">
            <i class="bi bi-tags me-2"></i>
            @R["Categorization"]
        </h5>
    </div>
    <div class="card-body custom-card-body p-4">
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Categories"></label>
                <input class="form-control" value="@string.Join(", ", Model.Categories.Select(x => x.Name))" disabled />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Tags"></label>
                <input class="form-control" value="@string.Join(", ", Model.Tags.Select(x => x.Name))" disabled />
            </div>
        </div>
    </div>
</div>

<!-- Media Card -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-custom-header text-dark py-3">
        <h5 class="mb-0">
            <i class="bi bi-image me-2"></i>
            @R["Media"]
        </h5>
    </div>
    <div class="card-body custom-card-body p-4">
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="FeaturedImage"></label>
                @if (Model.FeaturedImage != null)
                {
                    <div class="mt-2">
                        <img src="@await BlogAdeccoUtils.GetAttachmentUrlAsync(Model.FeaturedImage, Url)" alt="@(Model.Title)" class="featured-image-small" />
                    </div>
                }
                else
                {
                    <input class="form-control" value="@R["No image available"]" disabled />
                }
            </div>
        </div>
    </div>
</div>

<!-- Audit Information Card -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-custom-header text-dark py-3">
        <h5 class="mb-0">
            <i class="bi bi-clock-history me-2"></i>
            @R["Audit Information"]
        </h5>
    </div>
    <div class="card-body custom-card-body p-4">
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Created"></label>
                <input class="form-control" asp-for="Created" disabled />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="CreatedBy"></label>
                <input class="form-control" asp-for="CreatedBy.FullName" disabled />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Modified"></label>
                <input class="form-control" asp-for="Modified" disabled />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="ModifiedBy"></label>
                <input class="form-control" asp-for="ModifiedBy.FullName" disabled />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label class="form-label fw-semibold" asp-for="Published"></label>
                <input class="form-control" asp-for="Published" disabled />
            </div>
        </div>
    </div>
</div>
